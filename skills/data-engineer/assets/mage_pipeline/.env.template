# =============================================================================
# Environment Variables Template for Agentic Data Engineering Stack
# =============================================================================
#
# Copy this file to .env and fill in your actual values.
# NEVER commit .env files to version control.
#
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL (Data Warehouse / Feature Store)
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DBNAME=agentic_ml
POSTGRES_SCHEMA=public
POSTGRES_CONNECT=postgresql://postgres:your_secure_password_here@postgres:5432/agentic_ml

# -----------------------------------------------------------------------------
# H2O Cluster (ML Processing)
# -----------------------------------------------------------------------------
H2O_URL=http://h2o-compute:54321
H2O_CLUSTER_NAME=agentic-h2o-cluster

# -----------------------------------------------------------------------------
# Object Storage (Model Artifacts)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=agentic-ml-artifacts

# -----------------------------------------------------------------------------
# Kafka (Streaming - Optional)
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=agentic-pipeline

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------
API_BASE_URL=https://api.example.com
API_TOKEN=your_api_token_here

# -----------------------------------------------------------------------------
# OpenAI (Mage AI Features)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_key_here

# -----------------------------------------------------------------------------
# Alerting
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_FROM=data-pipeline@example.com

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_MEMORY_PATH=/home/agent_memory
LOG_LEVEL=INFO

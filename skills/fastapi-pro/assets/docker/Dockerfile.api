# =============================================================================
# Dockerfile.api - Multi-Stage Build for FastAPI Inference
# =============================================================================
# Optimized for production with minimal image size and fast cold starts.
# Includes C++ MOJO runtime dependencies for low-latency inference.
#
# Build: docker build -f Dockerfile.api -t fastapi-inference .
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Builder - Install dependencies and compile
# -----------------------------------------------------------------------------
FROM python:3.11-slim as builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry for dependency management
RUN pip install --no-cache-dir poetry==1.7.1

# Copy dependency files
COPY pyproject.toml poetry.lock* ./

# Export to requirements.txt and install
RUN poetry export -f requirements.txt --without-hashes > requirements.txt \
    && pip install --no-cache-dir --target=/build/deps -r requirements.txt

# Copy application code
COPY app /build/app

# -----------------------------------------------------------------------------
# Stage 2: Runtime - Minimal production image
# -----------------------------------------------------------------------------
FROM python:3.11-slim as runtime

WORKDIR /app

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    # C++ runtime for daimojo (if using C++ MOJO)
    libstdc++6 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd --create-home --shell /bin/bash appuser

# Copy installed packages from builder
COPY --from=builder /build/deps /usr/local/lib/python3.11/site-packages

# Copy application code
COPY --from=builder /build/app /app/app

# Create model directory
RUN mkdir -p /models/production && chown -R appuser:appuser /models

# Switch to non-root user
USER appuser

# Environment variables
ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    MODEL_PATH=/models/production/model.mojo \
    GENMODEL_JAR=/models/production/h2o-genmodel.jar \
    INFERENCE_WORKERS=4

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run with Uvicorn
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]

# =============================================================================
# Dockerfile.api - Multi-Stage Build for FastAPI Inference
# =============================================================================
# DEV-01-02: C++ MOJO Runtime Integration (No JDK)
#
# Strategy:
# - Stage 1 (builder): Compile dependencies with build tools
# - Stage 2 (runtime): Minimal image with C++ MOJO runtime only
#
# Key Optimizations:
# - No JDK in final image (uses daimojo C++ wrapper)
# - Multi-stage reduces image size by ~500MB
# - Non-root user for security
# - Health check for orchestration
#
# Build: docker build -f Dockerfile.api -t fastapi-inference .
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Builder - Install dependencies and compile
# -----------------------------------------------------------------------------
FROM python:3.11-slim AS builder

WORKDIR /build

# Install build dependencies required for:
# - asyncpg: libpq-dev
# - daimojo: build-essential, libopenblas-dev
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    libopenblas-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
ENV VIRTUAL_ENV=/opt/venv
RUN python -m venv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"

# Install Poetry
RUN pip install --no-cache-dir poetry==1.7.1

# Copy dependency files
COPY pyproject.toml poetry.lock* ./

# Export and install dependencies
RUN poetry export -f requirements.txt --without-hashes > requirements.txt && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code for potential build steps
COPY app /build/app

# -----------------------------------------------------------------------------
# Stage 2: Runtime - Minimal production image with C++ MOJO
# -----------------------------------------------------------------------------
FROM python:3.11-slim AS runtime

LABEL org.opencontainers.image.title="MLOps FastAPI Inference"
LABEL org.opencontainers.image.description="High-concurrency ML inference with C++ MOJO runtime"
LABEL org.opencontainers.image.version="1.0.0"

WORKDIR /app

# Install ONLY runtime dependencies:
# - libpq5: PostgreSQL client (asyncpg)
# - libopenblas0: BLAS operations for MOJO
# - libstdc++6: C++ standard library for daimojo
# NO JDK - using C++ MOJO runtime only
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    libopenblas0 \
    libstdc++6 \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user (security best practice)
RUN groupadd --gid 1000 appgroup && \
    useradd --uid 1000 --gid appgroup --shell /bin/bash --create-home appuser

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy application code
COPY --from=builder /build/app /app/app

# Create model directory with correct ownership
RUN mkdir -p /models/production && chown -R appuser:appgroup /models

# Environment configuration
ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONFAULTHANDLER=1 \
    MODEL_PATH=/models/production/model.mojo \
    INFERENCE_WORKERS=4 \
    THREAD_POOL_SIZE=8

# Expose port
EXPOSE 8000

# Health check (PROC-02-01: validates inference readiness)
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Switch to non-root user
USER appuser

# Run with Uvicorn (workers for process-based parallelism)
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]


# -----------------------------------------------------------------------------
# Stage 3: Development - Includes dev tools (optional target)
# -----------------------------------------------------------------------------
FROM runtime AS development

USER root

# Install development dependencies
RUN pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    pytest-cov \
    httpx \
    black \
    ruff \
    mypy

USER appuser

# Run with reload for development
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
